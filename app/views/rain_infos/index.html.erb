<p id="notice"><%= notice %></p>

<h1>Rain Infos</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Value</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rain_infos.each do |rain_info| %>
      <tr>
        <td><%= rain_info.date %></td>
        <td><%= rain_info.value %></td>
        <td><%= rain_info.city %></td>
        <td><%= link_to 'Show', rain_info %></td>
        <td><%= link_to 'Edit', edit_rain_info_path(rain_info) %></td>
        <td><%= link_to 'Destroy', rain_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rain Info', new_rain_info_path %>
