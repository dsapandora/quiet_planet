<p id="notice"><%= notice %></p>

<h1>Daily Weathers</h1>

<table>
  <thead>
    <tr>
      <th>Temperature</th>
      <th>Humidity</th>
      <th>Radiation</th>
      <th>Feels like</th>
      <th>Dew point</th>
      <th>Wind speed</th>
      <th>Preasure</th>
      <th>Time in unix</th>
      <th>Weather description</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_weathers.each do |daily_weather| %>
      <tr>
        <td><%= daily_weather.temperature %></td>
        <td><%= daily_weather.humidity %></td>
        <td><%= daily_weather.radiation %></td>
        <td><%= daily_weather.feels_like %></td>
        <td><%= daily_weather.dew_point %></td>
        <td><%= daily_weather.wind_speed %></td>
        <td><%= daily_weather.preasure %></td>
        <td><%= daily_weather.time_in_unix %></td>
        <td><%= daily_weather.weather_description %></td>
        <td><%= daily_weather.latitude %></td>
        <td><%= daily_weather.longitude %></td>
        <td><%= link_to 'Show', daily_weather %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Daily Weather', new_daily_weather_path %>
